<% content_for :page_javascript do %>
  <%= raw default_js %>
<% end %>

<div class="filters">
  <%= form_tag modifications_amount_by_commit_filtered_path %>

    <div class="filter_row clear">
      <%= render 'shared/repositories_selector', repositories: @repositories %>
      <%= render 'shared/modifications_selector', modifications: @modifications %>
    </div>

    <div class="date_filters">
      <%= render 'shared/date_selectors', from: @from, to: @to %>
    </div>

  </form>

  <%= submit_tag "Filter", :class => "btn btn-info filter_results_btn" %>
</div>

<div class="filter_results clear"></div>