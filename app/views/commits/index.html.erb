<h1>Listing commits</h1>

<table>
  <tr>
    <th>Rev</th>
    <th>Committer</th>
    <th>Author</th>
    <th>Date</th>
    <th>Message</th>
    <th>Composed rev</th>
    <th>Repository</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @commits.each do |commit| %>
  <tr>
    <td><%= commit.rev %></td>
    <td><%= commit.committer_id %></td>
    <td><%= commit.author_id %></td>
    <td><%= commit.date %></td>
    <td><%= commit.message %></td>
    <td><%= commit.composed_rev %></td>
    <td><%= commit.repository_id %></td>
    <td><%= link_to 'Show', commit %></td>
    <td><%= link_to 'Edit', edit_commit_path(commit) %></td>
    <td><%= link_to 'Destroy', commit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Commit', new_commit_path %>
