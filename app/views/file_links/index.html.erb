<h1>Listing file_links</h1>

<table>
  <tr>
    <th>Parent</th>
    <th>File</th>
    <th>Commit</th>
    <th>File path</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @file_links.each do |file_link| %>
  <tr>
    <td><%= file_link.parent_id %></td>
    <td><%= file_link.file_id %></td>
    <td><%= file_link.commit_id %></td>
    <td><%= file_link.file_path %></td>
    <td><%= link_to 'Show', file_link %></td>
    <td><%= link_to 'Edit', edit_file_link_path(file_link) %></td>
    <td><%= link_to 'Destroy', file_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

